  <% if (message.length > 0) { %>
      <h2 class="alert"><%= message %></h2>
  <% } %>
  <form action="/login" method="post">
    <div class="formHolder">
        <div>
          <h3> <strong>Administrator Login</strong> </h3>
        </div>
        <br>
        <div class = "form-group" >
          <label>Username</label>
            <input type="text" name="email" class = "form-control" poistion = "center"
           placeholder="Username" id="name" required data-validation-required-message="Please enter your email."/>   
           <br>   
           <label>Password</label>   
            <input type="password" name="password" class = "form-control"
             placeholder="Password" id="name" required data-validation-required-message="Please enter your email."/>
        </div>
        <br>
        <div>
            <button type="submit" class="btn btn-outline" >Login</button>
        </div>
    </div>
  </form>


